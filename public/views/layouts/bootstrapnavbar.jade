extends mainlayout

block navbar
	nav(class="navbar navbar-inverse navbar-fixed-top")
		div(class="container")
			
			div(class="navbar-header")
				button(type="button",class="navbar-toggle collapsed",data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
					span(class="sr-only")= "Toggle navigation"
					span(class="icon-bar")
					span(class="icon-bar")
					span(class="icon-bar")
				a(class="navbar-brand",href="/")= settings.title
			
			div(id="navbar",class="collapse navbar-collapse")
				ul(class="nav navbar-nav")
					each item in settings.menu
						li(class={active: view === item.view, dropdown: item.sub})
							if item.sub
								a(href="#",class="dropdown-toggle",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false")= item.title 
									| &nbsp;
									span(class="caret")
								ul(class="dropdown-menu")
									each subitem in item.sub
										li
											a(href=subitem.url)= subitem.title
							else
								a(href=item.url)= item.title

append sitecss
	link(rel="stylesheet", href=settings.sitecss.bootstrap)

append sitejs
	script(src=settings.sitejs.bootstrap)
